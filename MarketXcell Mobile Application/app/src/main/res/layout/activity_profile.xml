<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textV0iew15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:fontFamily="@font/inter"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="@color/Black100"
                    android:textFontWeight="600"
                    android:textSize="30dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="45dp">

                    <ImageView
                        android:id="@+id/profilepage_profilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profilepic" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textVjjiew3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/inter"
                    android:text="Name"
                    android:textColor="@color/Black75"
                    android:textFontWeight="700"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/profilepage_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your name"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/Black100"
                    android:textFontWeight="400"
                    android:layout_marginTop="8dp"
                    android:padding="16dp"
                    android:background="@drawable/textfield_background"/>

                <TextView
                    android:id="@+id/textViewemgypail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:text="Email"
                    android:textColor="@color/Black75"
                    android:textFontWeight="700"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/profilepage_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/Black100"
                    android:textFontWeight="400"
                    android:layout_marginTop="8dp"
                    android:padding="16dp"
                    android:background="@drawable/textfield_background"/>

                <TextView
                    android:id="@+id/textVireew3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:text="Mobile Number"
                    android:textColor="@color/Black75"
                    android:textFontWeight="700"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/profilepage_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/textfield_background"
                    android:fontFamily="@font/inter"
                    android:hint="Enter your mobile number"
                    android:inputType="number"
                    android:padding="16dp"
                    android:textColor="@color/Black100"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textViewemaili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:text="NIC Number"
                    android:textColor="@color/Black75"
                    android:textFontWeight="700"
                    android:textSize="14dp"

                    />

                <EditText
                    android:id="@+id/profilepage_NICNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/textfield_background"
                    android:fontFamily="@font/inter"
                    android:hint="Enter your NIC number"
                    android:inputType="textCapCharacters|text"
                    android:padding="16dp"
                    android:textColor="@color/Black100"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter"
                    android:text="Address"
                    android:textColor="@color/Black75"
                    android:textFontWeight="700"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/profilepage_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/textfield_background"
                    android:fontFamily="@font/inter"
                    android:hint="Enter Your Address"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/Black100"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/profilepage_updatebtn"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="Update"
                    android:padding="16px"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter"
                    android:textFontWeight="700"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_button1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="100dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/profilepage_changePassword"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button3"
                        android:fontFamily="@font/inter"
                        android:padding="16px"
                        android:text="Change Password"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textFontWeight="700"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/profilepage_changeSecQes"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button3"
                        android:fontFamily="@font/inter"
                        android:padding="16px"
                        android:text="Change Security Questions"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textFontWeight="700"
                        android:textSize="14dp" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/menu_component" />

</androidx.constraintlayout.widget.ConstraintLayout>