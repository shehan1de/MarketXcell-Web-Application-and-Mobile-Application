<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black3"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".Change_Password">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Change_password_page_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter"
                android:text="Back"
                android:layout_marginLeft="8dp"
                android:textColor="@color/Black100"
                android:textFontWeight="700"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="39dp"
            android:fontFamily="@font/inter"
            android:text="Create New Password"
            android:textColor="@color/Black100"
            android:textFontWeight="600"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Your new password must be unique from those previously used."
            android:textColor="@color/Black75"
            android:fontFamily="@font/inter"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/inter"
            android:text="New Password"
            android:textColor="@color/Black75"
            android:textFontWeight="700"
            android:textSize="14dp"

            />

        <EditText
            android:id="@+id/Change_password_page_txt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your new password"
            android:inputType="textPassword"
            android:textSize="14dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/Black100"
            android:textFontWeight="400"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:background="@drawable/textfield_background"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter"
            android:text="Confirm Password"
            android:textColor="@color/Black75"
            android:textFontWeight="700"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/Change_password_page_txt_Confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm your new password"
            android:inputType="textPassword"
            android:textSize="14dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/Black100"
            android:textFontWeight="400"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:background="@drawable/textfield_background"/>

        <Button
            android:id="@+id/Change_password_page_btn_PasswordReset"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Reset Password"
            android:padding="16px"
            android:textSize="14dp"
            android:fontFamily="@font/inter"
            android:textFontWeight="700"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button1" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/Change_password_page_loadingGif"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/loading"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="92dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:src="@drawable/logo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>