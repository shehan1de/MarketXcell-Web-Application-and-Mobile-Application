<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black3"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".Register_two">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Register_Page_Two_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter"
                android:text="Back"
                android:layout_marginLeft="8dp"
                android:textColor="@color/Black100"
                android:textFontWeight="700"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/texttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="39dp"
            android:fontFamily="@font/inter"
            android:text="Register"
            android:textColor="@color/Black100"
            android:textFontWeight="600"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enter Your Personal Information"
            android:textColor="@color/Black75"
            android:fontFamily="@font/inter"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/inter"
            android:text="Mobile Number"
            android:textColor="@color/Black75"
            android:textFontWeight="700"
            android:textSize="14dp"

            />

        <EditText
            android:id="@+id/Register_Page_Two_txt_mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textfield_background"
            android:fontFamily="@font/inter"
            android:hint="Enter your mobile number"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="@color/Black100"
            android:textFontWeight="400"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textViewemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter"
            android:text="NIC Number"
            android:textColor="@color/Black75"
            android:textFontWeight="700"
            android:textSize="14dp"

            />

        <EditText
            android:id="@+id/Register_Page_Two_txt_idNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textfield_background"
            android:fontFamily="@font/inter"
            android:hint="Enter your NIC number"
            android:inputType="textCapCharacters|text"
            android:padding="16dp"
            android:textColor="@color/Black100"
            android:textFontWeight="400"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter"
            android:text="Address"
            android:textColor="@color/Black75"
            android:textFontWeight="700"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/Register_Page_Two_txt_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/textfield_background"
            android:fontFamily="@font/inter"
            android:hint="Enter Your Address"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/Black100"
            android:textFontWeight="400"
            android:textSize="14dp" />

        <Button
            android:id="@+id/Register_Page_Two_btn_next"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Next"
            android:padding="16px"
            android:textSize="14dp"
            android:fontFamily="@font/inter"
            android:textFontWeight="700"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button1" />



    </LinearLayout>
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="92dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:src="@drawable/logo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>