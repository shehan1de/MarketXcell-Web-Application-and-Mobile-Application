<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black3"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainContrainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavgation"
        android:background="@color/White"
        app:itemTextColor="@color/PrimaryColor"
        app:itemIconTint="@drawable/bottomnavcolors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:menu="@menu/bottomnavmenu"
        app:layout_constraintBottom_toBottomOf="@+id/mainContrainer" />

</androidx.constraintlayout.widget.ConstraintLayout>