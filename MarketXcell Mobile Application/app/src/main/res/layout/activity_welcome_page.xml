<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Black3"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="match_parent"
    tools:context=".Welcome_pageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="171dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="305dp"
            android:layout_height="305dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/welcomeimg"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Everything You Need Is In One Place"
            android:fontFamily="@font/inter"
            android:textColor="@color/Black100"
            android:textSize="30dp"
            android:textFontWeight="600"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your daily necessities at Brand. The worldâ€™s largest fashion e-commerce has arrived in a mobile shop now!"
            android:fontFamily="@font/inter"
            android:textColor="@color/Black75"
            android:textFontWeight="400"
            android:textSize="16dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/Welcome_Page_btn_login"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Login"
            android:padding="16px"
            android:textSize="14dp"
            android:fontFamily="@font/inter"
            android:textFontWeight="700"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button1" />

        <Button
            android:id="@+id/Welcome_Page_btn_register"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Register"
            android:padding="16px"
            android:textSize="14dp"
            android:textColor="@color/White"
            android:fontFamily="@font/inter"
            android:textFontWeight="700"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>